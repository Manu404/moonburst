<UserControl x:Class="MoonBurst.Helper.Piano.PianoKeyWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             
             MouseEnter="UserControl_MouseEnter"
             MouseMove="UserControl_MouseMove"
             MouseLeave="UserControl_MouseLeave"
             
             MouseRightButtonDown="UserControl_MouseDown"
             MouseRightButtonUp="UserControl_MouseUp"
             d:DesignHeight="48" d:DesignWidth="8">
    <Grid>
        <Border x:Name="brdInner" BorderBrush="Black" BorderThickness="0.5" Background="White" CornerRadius="0,0,0,0">
        </Border>
    </Grid>
</UserControl>
